<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkarenk"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="84dp"
        android:layout_height="86dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/facebooklogo" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="24dp"
        android:layout_height="19dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_keyboard_arrow_down_24" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="325dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@color/girisvekullaniciadi"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/sifrenimiunuttun"
        android:textColorHint="@color/icyazi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText3" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="325dp"
        android:layout_height="44dp"
        android:layout_marginTop="50dp"
        android:background="@color/girisvekullaniciadi"
        android:ems="10"
        android:hint="Cep telefonu numarası veya e-posta adresini gir"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/sifrenimiunuttun"


        android:textColorHint="@color/icyazi"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/button"
        android:layout_width="325dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:bufferType="spannable"
        android:shadowColor="@color/butonrengi"
        android:text="Giriş yap"

        android:textColor="@color/girisbuton"
        android:textColorHighlight="@color/butonrengi"
        android:textColorHint="@color/butonrengi"
        android:textColorLink="@color/butonrengi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText"
        app:rippleColor="@color/butonrengi" />

    <Button
        android:id="@+id/button2"
        android:layout_width="325dp"
        android:layout_height="43dp"
        android:layout_marginTop="130dp"
        android:bufferType="spannable"
        android:shadowColor="@color/butonrengi"
        android:text="Yeni Hesap Oluştur"

        android:textColor="@color/girisbuton"
        android:textColorHighlight="@color/butonrengi"
        android:textColorHint="@color/butonrengi"
        android:textColorLink="@color/butonrengi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:rippleColor="@color/butonrengi"
        app:strokeColor="@color/butonrengi" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Türkçe"
        android:textColor="@color/icyazi"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="219dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Şifreni mi unuttun?"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:srcCompat="@drawable/meta_kucuk_resim" />

</androidx.constraintlayout.widget.ConstraintLayout>